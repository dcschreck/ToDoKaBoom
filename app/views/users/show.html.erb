<h2>Here Are Your To-Dos, <%="#{current_user.email}"%>...Get Crackin!!!!!</h2>

<div class="row">
    <div class="col-md-8">
        <%= render partial: 'items/item', locals: { item: @item } %>
    </div>
    <% if current_user %>
        <div class="col-md-4">
            <%= link_to "New To-Do", new_item_path, class: 'btn btn-success' %>
        </div>
    <% end %>
</div>
